{
  "name": "dev.corbie.web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:libs": "ng build crb-lib-icons && ng build crb-lib-local-storage && ng build crb-lib-clipboard && ng build crb-lib-nav",
    "pack:libs": "cd dist/crb-lib-icons && npm pack && cd ../.. && cd dist/crb-lib-local-storage && npm pack && cd ../.. && cd dist/crb-lib-clipboard && npm pack && cd ../.. && cd dist/crb-lib-nav && npm pack && cd ../.."
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "crb-lib-clipboard": "file:dist/crb-lib-clipboard/crb-lib-clipboard-0.0.1.tgz",
    "crb-lib-icons": "file:dist/crb-lib-icons/crb-lib-icons-0.0.1.tgz",
    "crb-lib-local-storage": "file:dist/crb-lib-local-storage/crb-lib-local-storage-0.0.1.tgz",
    "crb-lib-nav": "file:dist/crb-lib-nav/crb-lib-nav-0.0.1.tgz",
    "@corbie.dev/color-convert": "^1.0.1",
    "@corbie.dev/lorem-image": "^1.0.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.0",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.9.2"
  }
}
